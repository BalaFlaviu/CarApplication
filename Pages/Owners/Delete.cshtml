@page
@model CarApplication.Pages.Owners.DeleteModel

@{
    ViewData["Title"] = "Ștergere Proprietar";
}

<h1>@ViewData["Title"]</h1>

<h3>Ești sigur că vrei să ștergi acest proprietar?</h3>
<div>
    <div class="row">
        <div class="col-md-4">
            <dl class="row">
                <dt class="col-sm-3">Nume</dt>
                <dd class="col-sm-9">@Model.Owner.Name</dd>
                <dt class="col-sm-3">Telefon</dt>
                <dd class="col-sm-9">@Model.Owner.Phone</dd>
            </dl>

            @if (Model.Owner.Cars != null && Model.Owner.Cars.Any())
            {
                <div class="alert alert-warning">
                    <strong>Atenție!</strong> Acest proprietar are mașini înregistrate.
                    Ștergerea proprietarului va afecta și înregistrările mașinilor asociate.
                </div>
            }

            <form method="post">
                <input type="hidden" asp-for="Owner.Id" />
                <input type="submit" value="Șterge" class="btn btn-danger" />
                <a asp-page="./Index" class="btn btn-secondary">Înapoi la listă</a>
            </form>
        </div>
    </div>
</div>
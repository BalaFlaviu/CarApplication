@page
@model CarApplication.Pages.Cars.EditModel

@{
    ViewData["Title"] = "Editare Mașină";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Car.Id" />
            <div class="form-group mb-3">
                <label asp-for="Car.Brand" class="control-label">Brand</label>
                <input asp-for="Car.Brand" class="form-control" />
                <span asp-validation-for="Car.Brand" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Car.Model" class="control-label">Model</label>
                <input asp-for="Car.Model" class="form-control" />
                <span asp-validation-for="Car.Model" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Car.Year" class="control-label">An</label>
                <input asp-for="Car.Year" class="form-control" />
                <span asp-validation-for="Car.Year" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Car.OwnerId" class="control-label">Proprietar</label>
                <select asp-for="Car.OwnerId" class="form-control" asp-items="ViewBag.OwnerId">
                    <option value="">-- Selectează un proprietar --</option>
                </select>
                <span asp-validation-for="Car.OwnerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvează" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Înapoi la listă</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
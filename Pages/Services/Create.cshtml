@page
@model CarApplication.Pages.Services.CreateModel

@{
    ViewData["Title"] = "Adaugă Service";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Service.ServiceDate" class="control-label">Data Service</label>
                <input asp-for="Service.ServiceDate" class="form-control" type="date" />
                <span asp-validation-for="Service.ServiceDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Service.Description" class="control-label">Descriere</label>
                <textarea asp-for="Service.Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Service.Description" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Service.CarId" class="control-label">Mașină</label>
                <select asp-for="Service.CarId" class="form-control" asp-items="ViewBag.CarId">
                    <option value="">-- Selectează mașina --</option>
                </select>
                <span asp-validation-for="Service.CarId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Adaugă" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Înapoi la listă</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
@page
@model CarApplication.Pages.Insurances.CreateModel

@{
    ViewData["Title"] = "Adaugă Asigurare";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Insurance.Type" class="control-label">Tip Asigurare</label>
                <select asp-for="Insurance.Type" class="form-control">
                    <option value="RCA">RCA</option>
                    <option value="CASCO">CASCO</option>
                    <option value="Carte Verde">Carte Verde</option>
                </select>
                <span asp-validation-for="Insurance.Type" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Insurance.StartDate" class="control-label">Data Început</label>
                <input asp-for="Insurance.StartDate" class="form-control" type="date" />
                <span asp-validation-for="Insurance.StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Insurance.EndDate" class="control-label">Data Sfârșit</label>
                <input asp-for="Insurance.EndDate" class="form-control" type="date" />
                <span asp-validation-for="Insurance.EndDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Insurance.CarId" class="control-label">Mașină</label>
                <select asp-for="Insurance.CarId" class="form-control" asp-items="ViewBag.CarId">
                    <option value="">-- Selectează mașina --</option>
                </select>
                <span asp-validation-for="Insurance.CarId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Adaugă" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Înapoi la listă</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}